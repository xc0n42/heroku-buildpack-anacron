#!/usr/bin/env bash

set -eo pipefail

indent() {
  sed -u 's/^/       /'
}

# Usage: $ set-env key value
set-env() {
  echo "export $1=$2" >> $PROFILE_PATH
}

mktmpdir() {
  dir=$(mktemp -t fakesu-$1-XXXX)
  rm -rf $dir
  mkdir -p $dir
  echo $dir
}

BUILD_DIR=$1
CACHE_DIR=$2
ANACRON_BUILD="$(mktmpdir anacron)"
INSTALL_DIR="$BUILD_DIR/.heroku/vendor/anacron"
PROFILE_PATH="$BUILD_DIR/.profile.d/anacron.sh"

mkdir -p $INSTALL_DIR
mkdir -p $(dirname $PROFILE_PATH)
mkdir -p $CACHE_DIR

if [ ! -d $CACHE_DIR/anacron ]; then
	echo "Fetching and installing anacron" | indent
	cd $ANACRON_BUILD
	curl -O https://raw.githubusercontent.com/xc0n42/heroku-buildpack-anacron/main/anacron.sh
	curl -O https://raw.githubusercontent.com/xc0n42/heroku-buildpack-anacron/main/anacron-2.3.tar.gz
	tar xvfz anacron-2.3.tar.gz
	cp anacron.sh $CACHE_DIR/anacron/
	cd anacron-2.3
	echo "Compiling anacron" | indent
  export PREFIX=$CACHE_DIR/anacron/
	make
	cp anacron $INSTALL_DIR/
	cp anacron $CACHE_DIR/anacron/
else
	echo "Installing anacron from cache" | indent
	cp $CACHE_DIR/anacron/anacron $INSTALL_DIR/
	cp anacron.sh $CACHE_DIR/anacron/
fi

cat $CACHE_DIR/anacron/anacron.sh > $PROFILE_PATH
set-env PATH '/app/.heroku/vendor/anacron/bin/:$PATH'
set-env LD_LIBRARY_PATH '/app/.heroku/vendor/anacron/lib/:$LD_LIBRARY_PATH'

cat

echo "Done" | indent
